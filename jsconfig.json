{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "target": "ES2024",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
